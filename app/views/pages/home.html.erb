
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="box">
        <div class="banner-content">
          <%= simple_form_for :query, url: search_path, method: "get"  do |t| %>
          <%= t.input :airport, placeholder: "Airport Name"%>
            <ul class="suggestfions">
            </ul>
          <%= t.input :terminal, placeholder: "Terminal #" %>
          <%= t.input :destination, label: "Destination", as: :string, placeholder: "Where are you going?" %>
          <%= t.button :submit, "Go", class: "search_button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
