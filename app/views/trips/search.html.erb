<h2 style="color: white;" class="h2_search">Search Results</h2>
<div class="cards-container">
  <div class="row">
    <% @trips.each do |trip| %>
      <div class="col-xs-12 col-md-6 col-md-6">
        <%= link_to trip_path(trip, query: @params) do %>
          <h5>Terminal: <%= trip.terminal %></h5>
          <h5>Destination: <%= trip.destination %></h5>
          <h5>Ride Mates Allowed: <%= trip.ride_mates_limit %></h5><br><br>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to new_trip_path do %>
<div class=circle-btn>
  <div class="bar horizontal"></div>
  <div class="bar vertical"></div>
</div>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
